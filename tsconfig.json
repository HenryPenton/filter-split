{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022", "DOM"],
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*",
    "src/**/*.test.ts"
  ]
}
